{
  "compilerOptions": {
    "target": "es6",                                
    "module": "commonjs",                           
    "moduleResolution": "node",
    "sourceMap": true,                           
    "strict": true,                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "declaration": true,
    "types": ["node", "jest"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
